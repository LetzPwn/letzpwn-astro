---
import Layout from '../layouts/Layout.astro'
import Sponsor from '../components/Sponsor.astro'
---

<Layout title="Our Sponsors" subtitle="Sponsors">
  <main>
    <section class="players-section players-page-section">
      <div class="auto-container">
        <div class="row clearfix">
          <div class="no-sponsors" style="text-align:center;">
            <h3>We currently have no active sponsors.</h3>
            <p>We're open to new partnerships that support cybersecurity education, events, and our CTF community.</p>
            <a href="/contact" class="theme-btn btn-style-one">
              <span class="btn-title">Become a Sponsor</span>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .no-sponsors {
    margin: 3rem auto;
    padding: 2.5rem;
    max-width: 40rem;

    text-align: center;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 12px;

    backdrop-filter: blur(4px);
  }

  .no-sponsors h3 {
    margin-bottom: 1rem;
    font-size: 1.75rem;
    font-weight: 700;
    letter-spacing: 0.5px;
  }

  .no-sponsors p {
    margin-bottom: 2rem;
    font-size: 1.1rem;
    line-height: 1.6;
    opacity: 0.9;
  }

  .no-sponsors .theme-btn {
    display: inline-block;
  }

</style>